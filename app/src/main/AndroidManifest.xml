<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.falaaiunit">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FalaAiUnit">
        <activity
            android:name=".MeetingListActivity"
            android:exported="false"
            android:label="@string/title_activity_meeting_list"
            android:theme="@style/Theme.FalaAiUnit" />
        <activity
            android:name=".ScheduleMeetingActivity"
            android:exported="false"
            android:label="@string/title_activity_schedule_meeting"
            android:theme="@style/Theme.FalaAiUnit" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.FalaAiUnit" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.FalaAiUnit">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>